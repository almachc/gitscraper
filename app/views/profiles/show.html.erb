<div class="d-flex flex-column align-items-center">
  <h1><%= t('.title') %></h1>

  <div class="card shadow w-100 mx-auto" style="max-width: 37.5rem">
    <div class="card-body d-flex flex-column align-items-center px-5">
      <%= render @profile %>

      <div class="d-flex flex-wrap gap-2 mt-4">
        <%= button_to t('.rescan'),
                      rescan_profile_path(@profile),
                      data: { turbo_frame: dom_id(@profile) },
                      method: :patch,
                      class: 'btn btn-secondary' %>

        <%= link_to t('.edit'),
                    edit_profile_path(@profile, from: 'show'),
                    class: 'btn btn-outline-primary' %>

        <%= button_to t('.destroy'),
                      @profile,
                      method: :delete,
                      data: { turbo_confirm: t('.confirm_delete') },
                      class: 'btn btn-danger' %>

        <%= link_to t('.back'), profiles_path, class: 'btn btn-outline-dark' %>
      </div>
    </div>
  </div>
</div>
