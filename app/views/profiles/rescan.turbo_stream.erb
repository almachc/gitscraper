<% if @profile.errors.any? %>
  <%= turbo_stream.replace 'message' do %>
    <%= render 'shared/message', alert: t('.failure') %>
  <% end %>
<% else %>
  <%= turbo_stream.replace dom_id(@profile),
                           partial: 'profiles/profile',
                           locals: { profile: @profile } %>

  <%= turbo_stream.replace 'message' do %>
    <%= render 'shared/message', notice: t('.success') %>
  <% end %>
<% end %>
